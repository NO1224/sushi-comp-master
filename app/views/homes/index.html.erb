<div class="main">
  <%#ヘッダー領域%>
  <%= render "parts/first-header" %>
  <%#キャッチフレーズ領域%>
  <div class="top-wrapper">
    <div class="top-wrapper-translucent">
      <div class="catchphrase">
        オイシイは<br>冒険だ
      </div>
    </div>
  </div>
  <div class="top-main">
    <div class="home-left-content">
      <%#ピックアップ領域%>
      <div class="pickup">
        ピックアップ機能表示予定
        <ul class="horizontal-list">
          <%#自動横スクロール領域ーテスト中%>
          <li class="item">テスト１</li>
          <li class="item">テスト２</li>
          <li class="item">テスト３</li>
          <li class="item">テスト４</li>
          <li class="item">テスト５</li>
          <li class="item">テスト６</li>
        </ul>
      </div>
      <%#ニュース領域領域%>
      <div class="news">
        <h1 class="news-logo">NEWS</h1>
        <div class="container">
        <% @informations.each do |news| %>
          <%= link_to(informations_path, class: 'topics') do %>
          <article class="topic">
            <%= news.title %>:
            <%= truncate(news.content, omision: "...", length: 30,) %>
            <%= news.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
          </article>
          <% end %>
        <% end %>
        </div>
      </div>
    </div>
    <div class="home-right-content">
    <%#アーカイブ領域%>
      <div class="archive">
        <h1 class="archive-logo">過去ログ</h1>
        <div class="container">
          <ul>
            <% @archives.each do |yyyymm, cnt| %>
              <% unless @archives.blank? %>
                <li><%= ymconv(yyyymm[0], yyyymm[1], cnt) %></li>
              <% else %>  
                <% next %>
              <% end %>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>