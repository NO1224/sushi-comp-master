<div class="main">
  <%#ヘッダー領域%>
  <%= render "parts/first-header" %>
  <%#ページ名領域%>
  <div class="second-header-news-wrapper">
    <div class="second-header-translucent">
      <div class="title-box">
        <h2 class="menu-title">
          お知らせ一覧
        </h2>
      </div>
    </div>
  </div>
  <div class="news-wrapper">
      <%#お知らせ内容領域%>
      <div class="news-left-content">
        <% @informations.each do |news|%>
        <div class="news-main">
          <div class="news-date">
            <%= news.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
          </div>
          <div class="news-title">
            <%= news.title %>
          </div>
          <div class="news-content">
            <%= news.content%>
          </div>
        </div>
        <% end %>
      </div>
    <%#過去ログ領域%>
    <div class="news-right-content">
      <div class="archive">
        アーカイブ表示予定
      </div>
    </div>
  </div>
</div>